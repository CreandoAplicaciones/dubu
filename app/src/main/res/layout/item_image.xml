<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="true"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintDimensionRatio="4:4"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    <ImageView
        android:id="@+id/imgRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/text_background"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nameImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawing_list_difficulty"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/imgPencil1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/pencil"
                app:layout_constraintTop_toTopOf="@id/groupName"
                app:layout_constraintStart_toEndOf="@id/groupName"
                app:layout_constraintBottom_toBottomOf="@id/groupName" />
            <ImageView
                android:id="@+id/imgPencil2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/pencil"
                app:layout_constraintTop_toTopOf="@id/groupName"
                app:layout_constraintStart_toEndOf="@id/imgPencil1"
                app:layout_constraintBottom_toBottomOf="@id/groupName" />

            <ImageView
                android:id="@+id/imgPencil3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/pencil"
                app:layout_constraintTop_toTopOf="@id/groupName"
                app:layout_constraintStart_toEndOf="@id/imgPencil2"
                app:layout_constraintBottom_toBottomOf="@id/groupName" />

            <ImageView
                android:id="@+id/imgPencil4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/pencil"
                app:layout_constraintTop_toTopOf="@id/groupName"
                app:layout_constraintStart_toEndOf="@id/imgPencil3"
                app:layout_constraintBottom_toBottomOf="@id/groupName" />

            <ImageView
                android:id="@+id/imgPencil5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/pencil"
                app:layout_constraintTop_toTopOf="@id/groupName"
                app:layout_constraintStart_toEndOf="@id/imgPencil4"
                app:layout_constraintBottom_toBottomOf="@id/groupName"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>